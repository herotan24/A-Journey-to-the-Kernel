{
  "version": "0.1.0",
  "configurations": {
    "Remote GDB": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "Remote GDB",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/kernel/linux/vmlinux",  // 替换为你的程序路径
        "miDebuggerServerAddress": "localhost:1234",  // 替换为远程 GDBServer 地址和端口
        "miDebuggerPath": "/usr/bin/gdb",  // 替换为本地 GDB 路径
        "stopAtEntry": false,
        "externalConsole": false,
        "MIMode": "gdb",
        "cwd": "${workspaceFolder}",
        "environment": [],
        "console": "integratedTerminal",
        "internalConsoleOptions": "openOnSessionStart"
      }
    }
  }
}

